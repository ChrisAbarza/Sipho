<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewOfertaList"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:srcCompat="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewCateList"
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/comida" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewFechaList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="fecha"
                        android:textColorLink="@color/cardview_light_background" />

                    <TextView
                        android:id="@+id/textViewUsuarioList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="user"
                        android:textColorLink="@color/cardview_light_background" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewNombreList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPrecioList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio" />

            <TextView
                android:id="@+id/textViewDescripcionList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
